<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:weightSum="5"
    android:layout_height="680dp"
    tools:context=".MenuBi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_weight="2">

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="568dp"
        android:layout_weight="3"
        android:columnCount="2"
        android:rowCount="2"
        android:background="@drawable/cvbg"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/course"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            app:cardElevation="4dp"
            android:layout_height="0dp"
            app:cardCornerRadius="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="195dp"
                    android:layout_height="80dp"
                    android:src="@drawable/sylibus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="20dp"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Course Outline"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/topic"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            android:layout_height="0dp"
            app:cardCornerRadius="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="195dp"
                    android:src="@drawable/tajuk1"
                    android:layout_height="94dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:text="Topics"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/aktivities"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            android:layout_height="0dp"
            app:cardCornerRadius="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="195dp"
                    android:src="@drawable/activity"
                    android:layout_height="80dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:text="Activities"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/question"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            android:layout_height="0dp"
            app:cardCornerRadius="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="195dp"
                    android:src="@drawable/soalan_exam"
                    android:layout_height="80dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Sample Question"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/videos"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            android:layout_height="0dp"
            app:cardCornerRadius="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="195dp"
                    android:src="@drawable/video"
                    android:layout_height="80dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:text="Video Teaching"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </GridLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="214dp"
            android:layout_height="42dp"
            android:layout_marginTop="51dp"
            android:layout_centerInParent="true"
            android:backgroundTint="#D81B60"
            android:onClick="Googleform"
            android:text="Feedback"/>

    </RelativeLayout>



</LinearLayout>

